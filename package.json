{
    "name": "game-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for Game using PIXI.js and TS",
    "scripts": {
        "webpack": "webpack",
        "webpack-dev-server": "webpack-dev-server",
        "build": "npx del-cli dist --force  && npm run webpack -- --env.mode production",
        "dev": "gulp assets && npm run webpack-dev-server -- --env.mode development",
        "dev:close-watch": "gulp clear",
        "prettier": "npx prettier",
        "prettier:format": "npm run prettier -- --write src/**/*.ts",
        "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
        "lint-check": "npx eslint ./src/**/*.ts",
        "code-style-check": "npm run lint-check && npm run prettier:check"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@tweenjs/tween.js": "^18.6.0",
        "ecsy": "^0.4.1",
        "fontfaceobserver": "^2.1.0",
        "lodash": "^4.17.20",
        "pixi.js": "^5.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.11.4",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-proposal-decorators": "^7.10.5",
        "@babel/plugin-transform-modules-commonjs": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.11.0",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-typescript": "^7.10.4",
        "@babel/runtime": "^7.11.2",
        "@types/copy-webpack-plugin": "^6.0.0",
        "@types/fontfaceobserver": "0.0.6",
        "@types/html-webpack-plugin": "^3.2.3",
        "@types/lodash": "^4.14.159",
        "@types/lodash-webpack-plugin": "^0.11.4",
        "@types/node": "^14.6.0",
        "@types/pixi.js": "^5.0.0",
        "@types/terser-webpack-plugin": "^4.1.0",
        "@types/tween.js": "^18.5.1",
        "@types/webpack": "^4.41.21",
        "@types/webpack-dev-server": "^3.11.0",
        "@types/webpack-merge": "^4.1.5",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "babel-loader": "^8.1.0",
        "babel-register": "^6.26.0",
        "copy-webpack-plugin": "^6.0.3",
        "del": "^5.1.0",
        "del-cli": "^3.0.1",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-prettier": "^3.1.4",
        "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
        "fork-ts-checker-webpack-plugin": "^5.1.0",
        "gulp": "^4.0.2",
        "gulp-free-tex-packer": "^0.5.2",
        "html-webpack-plugin": "^4.3.0",
        "husky": "^4.2.5",
        "identity-obj-proxy": "^3.0.0",
        "jsdom": "^16.4.0",
        "lodash-webpack-plugin": "^0.11.5",
        "prettier": "^2.0.5",
        "pretty-quick": "^3.0.0",
        "terser-webpack-plugin": "^4.1.0",
        "through2": "^4.0.2",
        "ts-loader": "^8.0.2",
        "ts-node": "^8.10.2",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
